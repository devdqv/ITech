
@using ITech.Models;
@model List<SpecValue>

<div class="card-block table-border-style">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên loại</th>
                    <th>Giá trị</th>
                    <th>Danh mục</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                <tr>
                    <th> @(ITech.GetObj.GetSpecification(x.SpecID.Value).Name)</th>
                    <th>@x.Value</th>
                    <th>@(x.CategoryID == null ? "":GetObj.GetCategory(x.CategoryID.Value).Name)</th>

                    <th>

                        <span onclick="return edit('@x.ID', event)" title="Sửa bản ghi" class="outer-ellipsis">
                            <i class="ti-pencil"></i>
                        </span>
                        <span class="outer-ellipsis" onclick="return remove('@x.ID', event)" title="Xóa bản ghi">
                            <i class="ti-trash"></i>
                        </span>

                    </th>
                </tr>
                }

            </tbody>
        </table>
        <div id="ltlPage">@Html.Raw(ViewBag.ltlPage)</div>
        @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("pList", new { page }))*@
    </div>
</div>
