                            var objMyCart = {
                                id: id,
                                name: name,
                                quantity: quantity
                            };
                            sessionStorage.setItem('objMyCart', JSON.stringify(objMyCart));
                            //sessionStorage.setItem('url', location.href);

                            @{ Session["Return"] = Request.Url.PathAndQuery;}
                            location.href = "/dang-nhap-tai-khoan";
                        }
                    })
                    return false;
                }
                createMessageBoxConfirm("", "Sản phẩm "+name+" sẽ được hiển thị trong giỏ hàng của bạn khi người bán mở cửa trở lại ! Bạn vẫn muốn thêm nó vào giỏ hàng", function (confirm) {

                    if (confirm) {
                        $.post("/Cart/AddToCart", { ProductID: id, Quantity: quantity }, function (data) {
                            createMessageBox("", data.Message, data.Error);
                        });
                    }
                })
            })


            $('#btn-dang-ky').click(function (e) {
                e.preventDefault();
                $.get("/AccountKH/Register", function (d) {
                    openModal("Đăng ký", d);
                })
            })
           

        })

