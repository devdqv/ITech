    <script>
        function UpdateQuantity(d) {
            $('.txtThanhTien-' + d.Data.ID).text('₫ ' + (d.Data.ThanhTien));
            $('.txtThanhTien-' + d.Data.ID).data('price', (d.Data.ThanhTienVal));
            $('.iTemCart-' + d.Data.ID).data('thanhtien', (d.Data.ThanhTienVal));
            var total = 0;
            $('.checkboxChild:checked').each(function () {
                var thanhtien = $(this).data('thanhtien');
                total += thanhtien;
            });

            $('.MoneyTotal').text('₫' + formatMoney(total));
            $('.MoneyTotal').data('mtotal', (total));
            console.log($('.MoneyTotal').data('mtotal'));

            $('.totalMoney').text('₫' + formatMoney(total));
            $('.totalMoney').data('mtotal', (total));
            console.log($('.totalMoney').data('mtotal'));


        }

        $('.value-plus').on('click', function () {
            var divUpd = $(this).parent().find('.value'),
                newVal = parseInt(divUpd.text(), 10) + 1;
            divUpd.text(newVal);
            $('#txtQty').val(newVal);
            $.post("/Cart/UpdateQuantity", { Qty: newVal, Id: $(this).data('id') }, function (d) {
                if (d.Error == true) {
                    createMessageBox("Có lỗi xảy ra, vui lòng thử lại");

                }
                else {
                    UpdateQuantity(d);
                }


            });
        });



        $('.value-minus').on('click', function () {
            var divUpd = $(this).parent().find('.value'),
                newVal = parseInt(divUpd.text(), 10) - 1;
            if (newVal >= 1) {
                divUpd.text(newVal);
                $('#txtQty').val(newVal);
                $.post("/Cart/UpdateQuantity", { Qty: newVal, Id: $(this).data('id') }, function (d) {
                    if (d.Error == true) {
                        createMessageBox("Có lỗi xảy ra, vui lòng thử lại");

                    }
                    else {
                        UpdateQuantity(d);

                    }
                });
            }
        });

        $('.removeProductCart').on('click', function () {
            var id = $(this).data('id');
            createMessageBoxConfirm("", "Xóa sản phẩm khỏi giỏ hàng?", function (confirm) {

